<% @page_title = "New Page" %>

<%= link_to("<< Back to List", pages_path(:subject_id => @subject.id), :class => "back link") %>

<div class="pages new">
    <h2>Create Page</h2>

    <%= form_for(@page, :url => pages_path(:subject_id => @subject.id)) do |f| %>  <!-- form automatically knows this is a post request based on instance variable-->

        <%= render(:partial => "form", :locals => {:f => f}) %>

        <div class="form-buttons">
            <%= f.submit("Create Page") %>
        </div>
    <% end %>
</div>
