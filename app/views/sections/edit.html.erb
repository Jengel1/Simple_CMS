<% @page_title = "Edit Section" %>


<%= link_to("<< Back to List", sections_path(:page_id => @page.id), :class => "back link") %>

<div class="sections edit">
    <h2>Update Section</h2>

    <%= form_for(@section, :url => section_path(@section, :page_id => @page.id)) do |f| %>  <!-- form automatically knows this is a post request based on instance variable-->

        <%= render(:partial => "form", :locals => {:f => f}) %>

        <div class="form-buttons">
            <%= f.submit("Update Section") %>
        </div>
    <% end %>
</div>
